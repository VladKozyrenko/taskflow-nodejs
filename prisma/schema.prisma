datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  projects Project[]
}

model Project {
  id      Int    @id @default(autoincrement())
  name    String
  ownerId Int
  owner   User   @relation(fields: [ownerId], references: [id])
  tasks   Task[]
}

model Task {
  id        Int    @id @default(autoincrement())
  title     String
  status    String
  projectId Int
  project   Project @relation(fields: [projectId], references: [id])
}